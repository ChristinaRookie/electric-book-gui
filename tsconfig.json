{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outFile": "public/js/ts-tsc.js",
        "outDir": "dist",
        "sourceMap": true,
        "target": "esnext",
        "moduleResolution": "node",
        "lib":["es2017", "dom", "dom.iterable", "es2015.collection", "es2015.generator", "es2015.iterable", "es2015.promise", "es2015.proxy", "es2015.reflect", "es2015.symbol"],
        "module": "none",
        "types" : [ "core-js"]
    },
    "include": [
        "src/ts/**/*.ts"
    ],
    "exclude": [
        // "node_modules"
    ]
}
